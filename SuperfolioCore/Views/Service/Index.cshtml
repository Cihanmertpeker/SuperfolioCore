@using EntityLayer.Concrete
@model List<Service>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}


<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort" data-sort="name">#</th>
                <th scope="col" class="budget" data-sort="budget">Başlık</th>             
                <th scope="col">Düzenle</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.ServiceId</th>
                    <th class="budget">@item.Title</th>                   
                    <td><a href="/Service/EditService/@item.ServiceId" class="btn btn-outline-warning">Düzenle</a></td>
                    <td><a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Sil</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a href="/Service/AddService" class="btn btn-primary">Yeni Hizmet Ekle</a>
</div>